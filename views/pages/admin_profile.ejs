<!DOCTYPE html>
<html>
    <%- include('../reusables/head.ejs') %>
    </head>

    <body>
        <nav class="sidebar">
            <div class="sidebar__top-content">
                <a href=""><img height="108px" width="192px" src="../picture/logo.png" alt=""></a>
            </div>
            <ul class="sidebar__links"style="margin-left: -20px; margin-top: -25px">

                <p class="main_nav">MAIN MENU</p>

                <li class="sidebar__link">
                    <a href="/admin-dash">
                        <i class='sidebar__link-icon bx bxs-home' ></i>
                        <span class="sidebar__link-name">Dashboard</span>
                    </a>
                </li>

                <li class="sidebar__link">
                    <a href="/admin-toko">
                        <i class='sidebar__link-icon bx bxs-store' style="color: #E76F51;"></i>
                        <span class="sidebar__link-name" style="color: #E76F51;">Profil Toko</span>
                    </a>
                </li>

                <li class="sidebar__link">
                    <a href="/admin-ongoing">
                        <i class='sidebar__link-icon bx bxs-cart alt'></i>
                        <span class="sidebar__link-name">Ongoing Order</span>
                    </a>
                </li>

                <li class="sidebar__link">
                    <a href="/admin-transaksi">
                        <i class='sidebar__link-icon bx bx-money-withdraw'></i>
                        <span class="sidebar__link-name">Transaksi</span>
                    </a>
                </li>

                <li class="sidebar__link">
                    <a href="/admin-produk">
                        <i class='sidebar__link-icon bx bxs-cube' ></i>
                        <span class="sidebar__link-name">List Produk</span>
                    </a>
                </li>

            </ul>

            <div class="out">
                <a href="/home">
                    <button style="background-color: #2A9D8F;">Keluar Dari Toko</button>
                </a>
            </div>
        </nav>

        <% tokoprf.forEach(profil => { %>
         
        <div class="right">
            <h1 style="margin-top: 60px; margin-left: 30px; margin-bottom: 70px;">Profil Toko</h1>
            <form action="/admin-toko" method="post">
            <div style="display: flex; flex-direction: row; margin-left: 30px;">
                <div style="height: 100px; width: 30%;">
                    <img src="../picture/defaultSeller.png" alt="ava" style="border-radius: 50%; width: 250px; height: 250px; margin-right: 50px; border: 8px solid #264653;">
                    <input type="file" accept="image/*" id="imgToko" style="display: none;" name="imgToko"></input>
                    <label for="imgToko" style="margin-left: 18%; margin-top: 20px; background-color: #E9C46A;">Ubah foto profil</label>
                </div>
                <div style="height: 100px; width: 70%; ">
                    <h2 style="color: #F4A261;">Identitas Toko</h2>
                    <div style="display: flex; border-bottom: 5px solid #26465328; padding-bottom: 30px;">
                        <div style="width: 50%;">
                            <p>Nama Toko</p>
                            <input type="text" style="width: 250px;" id="tokoNama" name="tokoNama" value="<%- profil.tokoNama %>">
                            <p>Kategori Toko</p>
                            <select id="referrer" name="referrer" style="display: block;">
                                <option value="<%- profil.tokoKategori %>"><%- profil.tokoKategori %></option>
                                <option value="sayur">Sayur</option>
                                <option value="rempah">Bumbu/rempah</option>
                                <option value="buah">Buah</option>
                                <option value="lainnya">Lainnya</option>
                            </select>
                        </div>

                        <div>
                            <p>Deskripsi Toko</p>
                            <textarea placeholder="Deskripsi toko..." style="width: 250px; height: 150px;" id="tokoDeskripsi" name="tokoDeskripsi"><%- profil.tokoDeskripsi %></textarea>
                        </div>
                    </div>

                    <div style="margin-top: 20px; overflow: auto; border-bottom: 5px solid #26465328; padding-bottom: 30px;">
                        <h2 style="color: #2A9D8F;">Identitas Pemilik Toko</h2>
                        <div style="display: flex;">
                            <div style="width: 50%;">
                                <p>Nama</p>
                                <input type="text" id="namaPemilik" name="namaPemilik" value="<%- profil.tokoNamaPemilik %>">
                            </div>
                            <div style="width: 50%;">
                                <p>Nomor rekening</p>
                                <input type="number" id="tokoRekening" name="tokoRekening" value="<%- profil.tokoRekening %>">
                            </div>
                        </div>
                    </div>  

                    <div style="margin-top: 20px; overflow: auto;">
                        <h2 style="color: #E76F51;">Alamat Toko</h2>
                        <div>
                            <p>Alamat</p>
                            <textarea placeholder="Masukkan alamat lengkap..." style="width: 100%; height: 100px;" id="alamatLengkap" name="alamatLengkap"><%- profil.tokoAlamat.alamatLengkap %></textarea>
                            <div style="display: flex;">
                                <div style="width: 50%;">
                                    <p>Kota/Kabupaten</p>
                                    <input type="text" style="width: 70%;" id="kota" name="kota" value="<%- profil.tokoAlamat.kota %>">
                                </div>
                                <div style="width: 50%;">
                                    <p>Provinsi</p>
                                    <input type="text" style="width: 70%;" id="provinsi" name="provinsi" value="<%- profil.tokoAlamat.provinsi %>">
                                </div>
                            </div>
                            <div style="background-color: #26465328; height: 5px; width: 100%; margin-top: 30px;"></div>
                            <button style="margin-top: 50px; margin-left: 35%; margin-bottom: 40px; background-color: #E9C46A;" type="submit">Simpan Perubahan</button>
                        </div>
                    </div>
                </div>
            </div>
            </form>

        </div>
        <% }) %>
    </body>
